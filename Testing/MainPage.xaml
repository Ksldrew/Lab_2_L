<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Testing.MainPage">


    <ScrollView>
        <Grid RowDefinitions="280, Auto" RowSpacing="0" Margin="0">

            <Image Grid.Row="0"
                   Source="pug_image.png" 
                   Aspect="AspectFill"
                   VerticalOptions="Start"/>

            <VerticalStackLayout Grid.Row="1" Margin="15,-120,15,15" Spacing="15">

                <Frame CornerRadius="25" Padding="20" BackgroundColor="#FEF8E3" HasShadow="True" BorderColor="Transparent">
                    <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto" RowSpacing="10">

                        <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                            <Label Text="Robin Hood" FontSize="26" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="Pug" FontSize="16" TextColor="Gray"/>
                        </VerticalStackLayout>

                        <HorizontalStackLayout Grid.Row="0" Grid.Column="1" Spacing="5" VerticalOptions="Center">
                            <Label Text="♂" FontSize="22" TextColor="#4A90E2" VerticalTextAlignment="Center"/>
                            <Label Text="1 year old" FontSize="14" TextColor="Gray" VerticalTextAlignment="Center"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Spacing="8">
                            <Image Source="location_pin.png" WidthRequest="16" HeightRequest="16" VerticalOptions="Center"/>
                            <Label Text="38, Lorong 88, Taman Rantau Panjang, 96000 Sibu, Sarawak" 
                                   FontSize="12" 
                                   TextColor="Gray" 
                                   LineBreakMode="WordWrap"
                                   VerticalTextAlignment="Center"/>
                        </HorizontalStackLayout>
                    </Grid>
                </Frame>

                <Grid ColumnDefinitions="Auto, *, Auto" Padding="15,5" VerticalOptions="Center">
                    <!-- Owner Avatar -->
                    <Frame CornerRadius="25" HeightRequest="50" WidthRequest="50" Padding="0" BorderColor="LightGray" IsClippedToBounds="True">
                        <Image Source="owner_avatar.png" Aspect="AspectFill" />
                    </Frame>

                    <Label Grid.Column="1" Text="Jeon Jungkook" VerticalOptions="Center" Margin="15,0,0,0" TextColor="Black" FontAttributes="Bold"/>

                    <Label Grid.Column="2" Text="1.11.2024" VerticalOptions="Center" TextColor="Gray"/>
                </Grid>

                <Label Text="Hi! Robin the Pug is simply a tiny tornado of fur, wrinkles, and endless charm!"
                       Padding="15,0" TextColor="Gray"/>

                <Grid ColumnDefinitions="Auto, *" Padding="15,5" ColumnSpacing="15">
                    <Button Grid.Column="0" 
                            Text="♡" 
                            FontSize="24"
                            WidthRequest="60" 
                            HeightRequest="60" 
                            CornerRadius="30"
                            BorderColor="LightGray"
                            BorderWidth="1"
                            BackgroundColor="White"
                            TextColor="Gray"/>

                    <Button Grid.Column="1" 
                            Text="Adoption" 
                            BackgroundColor="#FFC107" 
                            TextColor="Black" 
                            HeightRequest="60"
                            CornerRadius="30"
                            FontSize="16"
                            FontAttributes="Bold"/>
                </Grid>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
